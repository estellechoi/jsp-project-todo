package kr.co.todo.servlet;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import kr.co.todo.dao.TodoDao;
import kr.co.todo.dto.TodoDto;

@WebServlet("/TodoAddServlet")
public class TodoAddServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	public TodoAddServlet() {
		super();

	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {

		String title = request.getParameter("title");
		String name = request.getParameter("name");
		int sequence = Integer.parseInt(request.getParameter("sequence"));

		TodoDto todoDto = new TodoDto();
		try {
			todoDto.setTitle(title);
			todoDto.setName(name);
			todoDto.setSequence(sequence);
		} catch (NullPointerException e) {
			e.printStackTrace();
		}

		TodoDao todoDao = new TodoDao();
		int insertCount = 0;
		try {
			insertCount = todoDao.addTodo(todoDto);
		} catch (Exception e) {
			e.printStackTrace();
		}

		response.sendRedirect("MainServlet?insertCount=" + insertCount);

	}

}
